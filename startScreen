import javax.swing.*;
import java.awt.Color;
import java.awt.event.*;
import java.awt.*;
import javax.swing.Timer;
public class StartScreen implements ActionListener
{
    private JFrame f;
    private JButton start;
    private JLabel text;
    
    public StartScreen()
    {
        f = new JFrame();
        f.setSize(620,500);
        f.setLayout(null);
        f.setVisible(true);
        start = new JButton("Start");
        start.setBounds(160, 200, 300,200);
        start.addActionListener(this);
        f.add(start);
        text = new JLabel("Operation Rush");
        text.setFont(new Font("Poppins", Font.BOLD, 48));
        text.setBounds(120, 50, 500,200);
        f.add(text);
    }
    
    
    public void actionPerformed(ActionEvent e) 
    {
        RunGame r = new RunGame();
        r.run();
        f.setVisible(false);

    }
    
}
