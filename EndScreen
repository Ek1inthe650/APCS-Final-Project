import javax.swing.*;
import java.awt.Color;
import java.awt.event.*;
import java.awt.*;
import javax.swing.Timer;
public class EndScreen implements ActionListener
{
    private JFrame endScreen;
    private JButton restart;
    private JLabel text;
    
    public EndScreen()
    {
        endScreen = new JFrame();
        endScreen.setSize(620,500);
        endScreen.setLayout(null);
        endScreen.setVisible(true);
        int time = MakeGame.getTime();
        
        
        text = new JLabel("Game Over");
        text.setFont(new Font("Poppins", Font.BOLD, 48));
        text.setBounds(160, 25, 500,200);
        endScreen.add(text);
        text = new JLabel("Time: " + time);
        text.setFont(new Font("Poppins", Font.BOLD, 48));
        text.setBounds(180, 100, 500,200);
        endScreen.add(text);
        
        restart = new JButton("Restart");
        restart.setBounds(160, 250, 300,200);
        restart.addActionListener(this);
        endScreen.add(restart);
    }
    
    
    public void actionPerformed(ActionEvent e) 
    {
        StartScreen start = new StartScreen();
        endScreen.setVisible(false);

    }
    
}
